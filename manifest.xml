<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">

  <Id>8f843634-b3a3-4b6a-b654-contoso123456</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Contoso</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Open Contoso Website"/>
  <Description DefaultValue="Opens www.contoso.com when button is clicked"/>
  <IconUrl DefaultValue="https://www.contoso.com/assets/icon32.png"/>
  <HighResolutionIconUrl DefaultValue="https://www.contoso.com/assets/icon64.png"/>
  <SupportUrl DefaultValue="https://www.contoso.com/support"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <ExtensionPoint xsi:type="MessageReadCommandSurface">
    <OfficeTab id="TabDefault">
      <Group id="msgReadGroup">
        <Label resid="groupLabel"/>
        <Control xsi:type="Button" id="msgReadOpenContoso">
          <Label resid="buttonLabel"/>
          <Supertip>
            <Title resid="buttonLabel"/>
            <Description resid="buttonDesc"/>
          </Supertip>
          <Icon>
            <bt:Image size="16" resid="icon16"/>
            <bt:Image size="32" resid="icon32"/>
            <bt:Image size="80" resid="icon80"/>
          </Icon>
          <Action xsi:type="ShowTaskpane">
            <SourceLocation resid="taskpaneUrl"/>
          </Action>
        </Control>
      </Group>
    </OfficeTab>
  </ExtensionPoint>

  <Resources>
    <bt:Images xmlns:bt="http://schemas.microsoft.com/office/mailappversionoverrides/1.0">
      <bt:Image id="icon16" DefaultValue="https://www.contoso.com/assets/icon16.png"/>
      <bt:Image id="icon32" DefaultValue="https://www.contoso.com/assets/icon32.png"/>
      <bt:Image id="icon80" DefaultValue="https://www.contoso.com/assets/icon80.png"/>
    </bt:Images>
    <bt:Urls xmlns:bt="http://schemas.microsoft.com/office/mailappversionoverrides/1.0">
      <bt:Url id="taskpaneUrl" DefaultValue="https://localhost/taskpane.html"/>
    </bt:Urls>
    <bt:ShortStrings xmlns:bt="http://schemas.microsoft.com/office/mailappversionoverrides/1.0">
      <bt:String id="groupLabel" DefaultValue="Contoso Tools"/>
      <bt:String id="buttonLabel" DefaultValue="Open Contoso"/>
    </bt:ShortStrings>
    <bt:LongStrings xmlns:bt="http://schemas.microsoft.com/office/mailappversionoverrides/1.0">
      <bt:String id="buttonDesc" DefaultValue="Click to open www.contoso.com"/>
    </bt:LongStrings>
  </Resources>

</OfficeApp>
